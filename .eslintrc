{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "mocha"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
